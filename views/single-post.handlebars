<!-- container for single post -->
<article class="post border border-dark border-3 rounded my-2">
    <div class="d-flex flex-row flex-wrap align-items-center justify-content-between text-bg-dark p-2 px-4">
        <a href="/" class="text-decoration-none text-white fw-bold fs-3">
            {{post.title}}
        </a>
        <div class="fs-5 fw-semibold">
            Posted by {{post.user.username}} on {{post.created_at}}
        </div>
    </div>
    <div class="fs-4 p-3 px-4 fw-semibold">
        {{post.content}}
    </div>
</article>

<!-- conditionally render element -->
{{#if loggedIn}}
<!-- add comment form -->
<form id="comment-form" class="border border-dark border-3 rounded my-2">
    <div class="m-4 fs-5 fw-semibold d-flex flex-column">
        <label for="comment-textarea" class="form-label fs-4">Comment</label>
        <textarea id="comment-textarea" name="comment-textarea" class="border border-dark border-2 rounded fw-semibold"></textarea>
        <div class="d-grid mt-3">
            <button type="submit" class="btn btn-primary btn-lg fw-semibold">Submit!</button>
        </div>
    </div>
</form>
{{/if}}

<!-- container for comments -->
<div class="comments-section my-3">
    {{#each post.comments}}
    <section class="comment mx-4 fw-semibold d-flex flex-column border-top border-bottom border-2">
        <div class="comment-text fs-4 mb-1 mt-2">
            {{comment_text}}
        </div>
        <div class="user-info fs-5 mb-2 mt-1">
            {{user.username}} on {{created_at}}
        </div>
    </section>
    {{/each}}
</div>

<!-- conditionally render script -->
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}