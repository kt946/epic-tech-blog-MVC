<!-- create post form -->
<section>
    <div class="d-grid mx-auto my-2 mb-3">
        <button type="button" class="new-post-btn btn btn-primary btn-lg fw-semibold rounded-pill mx-auto">
            <i class="bi bi-plus-lg"></i>
            Create Post
        </button>
        <button type="button" class="cancel-post-btn btn btn-primary btn-lg fw-semibold rounded-pill mx-auto d-none">
            <i class="bi bi-x-lg"></i>
            Cancel Post
        </button>
    </div>
    <form id="post-form" class="border border-dark border-3 rounded my-2 d-none">
        <div class="fw-semibold fs-3 text-bg-dark p-2 px-4">
            Create Post
        </div>
        <div class="mx-4 mt-2 mb-3 fw-semibold">
            <div>
                <label for="post-title" class="form-label fs-5 fw-semibold">Title</label>
                <input type="text" id="post-title"  name="post-title" class="form-control border border-2 border-dark fs-5 fw-semibold"/>
            </div>
            <div>
                <label for="post-content" class="form-label fs-5 fw-semibold mt-2">Content</label>
                <textarea id="post-content" name="post-content" class="form-control border border-2 border-dark fs-5 fw-semibold"></textarea>
            </div>
            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-primary btn-lg fw-semibold rounded-pill">
                    <i class="bi bi-chat-left-text"></i>
                    Post
                </button>
            </div>
        </div>
    </form>
</section>

{{#if posts.length}}
<section>
    <h3>Your Posts</h3>
    <ul class="d-flex flex-column list-group">
        {{#each posts as |post|}}
        <li>
            <!-- import dashboard-post-info partial for editing -->
            {{> dashboard-post-info post}}
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>