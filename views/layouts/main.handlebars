<!-- html for main.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>The Tech Blog</title>
</head>
<body>
    <header class="bg-dark">
        <!-- navigation -->
        <nav class="d-flex justify-content-center justify-content-md-start">
            <ul class="navbar-nav flex-row flex-wrap p-2 fs-5">
                <li class="nav-item">
                    <a class="nav-link p-1" href="/">
                        <i class="bi bi-house"></i>
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link p-1" href="/dashboard">
                        <i class="bi bi-person-circle"></i>
                        Dashboard
                    </a>
                </li>
                {{#if loggedIn}}
                <li class="nav-item">
                    <button id="logout" class="btn btn-link text-decoration-none p-1 border border-0 shadow-none text-reset">
                        <i class="bi bi-box-arrow-left"></i>
                        Logout
                    </button>
                </li>
                {{else}}
                <li class="nav-item">
                    <a class="nav-link p-1" href="/login">
                        <i class="bi bi-box-arrow-in-right"></i>
                        Login
                    </a>
                </li>
                {{/if}}
            </ul>
        </nav>
        <!-- title -->
        <h1 class="d-flex bg-warning mb-0 py-3">
            <a class="fs-1 fw-bold nav-link mx-5 my-2 py-2 px-5 text-bg-primary rounded" href="/">
                The Tech Blog
            </a>
        </h1>
    </header>

    <!-- main -->
    <main class="mx-auto">

        {{{ body }}}
        
    </main>

    <!-- footer -->
    <footer class="text-light bg-dark p-3 fs-5 d-flex justify-content-center">
        &copy; 2022 Tech Blog, Inc.
    </footer>
    
    <!-- script -->
    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}
</body>
</html>